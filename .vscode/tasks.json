{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build",
            "type": "shell",
            "command": "msbuild",
            "args": [
                "/property:GenerateFullPaths=true",
                "/t:build"
            ],
            "group": "build",
            "presentation": {
                "reveal": "silent"
            },
            "problemMatcher": "$msCompile"
        },
        {
            "type": "shell",
            "label": "gcc build active file",
            "command": "/bin/gcc",
            "args": [
                "-g",
                "${fileDirname}/ls8.c","${fileDirname}/cpu.c",
                "-o",
                "${fileDirname}/ls8"
            ],
            "options": {
                "cwd": "/bin"
            },
            "problemMatcher": [
                "$gcc"
            ]
        }
    ]
}